{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["astro/client"],
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$components/*": ["src/components/*"],
      "$utils/*": ["src/utils/*"],
      "$types/*": ["src/types/*"],
      "$data/*": ["src/data/*"],
      "$layouts/*": ["src/layouts/*"]
    }
  }
}
