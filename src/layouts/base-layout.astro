---
import CvHeader from "@/components/cv-header";
import "../styles/base.css";

import SiteFooter from "@/components/site-footer";
import SiteHeader from "@/components/site-header.astro";
const isProd = import.meta.env.PROD;
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>
      Arne Wiese | Freier Entwickler für Web-Technologien, APIs und KI-Lösungen
    </title>
    <meta
      name="description"
      content="Fullstack · JavaScript · TypeScript · NodeJS · Python · Golang"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
  </head>
  <body>
    <CvHeader
      name="Arne Wiese"
      title="Senior AI Software Engineer"
      location="Meerbusch, Germany"
      email="arne@wiese.me"
      website="arnewiese.de"
      imageUrl="/assets/arne-neu-quadratisch.jpeg"
    />

    <main class="app-grid space-y-12 md:space-y-24">
      <slot />
    </main>

    <SiteFooter />

    {isProd && <script data-domain="arnewiese.de" src="/js/script.js" />}
  </body>
</html>
