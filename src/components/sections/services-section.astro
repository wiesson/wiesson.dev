---
import type { Locale } from "../../i18n";
import { getTranslations } from "../../i18n";
import { Blocks, SearchCheck, Route, Rocket } from "@lucide/astro";

interface Props {
  lang?: Locale;
}

const { lang = "de" } = Astro.props;
const t = getTranslations(lang);

const services = [
  {
    icon: Blocks,
    title: t.services.systemPlanning.title,
    description: t.services.systemPlanning.description,
  },
  {
    icon: SearchCheck,
    title: t.services.systemAudit.title,
    description: t.services.systemAudit.description,
  },
  {
    icon: Route,
    title: t.services.roadmapCleanup.title,
    description: t.services.roadmapCleanup.description,
  },
  {
    icon: Rocket,
    title: t.services.mvpSaas.title,
    description: t.services.mvpSaas.description,
  },
];
---

<section class="app-grid py-12">
  <div class="app-text-column mb-6">
    <h2 class="title">{t.sections.services}</h2>
  </div>
  <div class="app-wide-column">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {
        services.map((service) => (
          <div class="p-6 rounded-xl border border-border bg-card">
            <div class="flex size-12 items-center justify-center rounded-full bg-muted mb-3">
              <service.icon class="size-6" />
            </div>
            <h3 class="font-semibold text-foreground mb-2">{service.title}</h3>
            <p class="text-sm text-muted-foreground">{service.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
