---
import type { Locale } from "../../i18n";
import { getTranslations } from "../../i18n";
import { getCollection } from "astro:content";

interface Props {
  lang?: Locale;
}

const { lang = "de" } = Astro.props;
const t = getTranslations(lang);

// Get work collection based on language
const collectionName = lang === "de" ? "work" : "work-en";
const allWork = await getCollection(collectionName);

// Filter for specific featured projects
const featuredSlugs = ["maklerupdate", "easy-invoice", "tourvy"];
const featuredProjects = allWork.filter((item) => {
  const slug = item.id.toLowerCase();
  return featuredSlugs.some(
    (featured) =>
      slug.includes(featured) ||
      item.data.project?.toLowerCase().includes(featured)
  );
});

// Sort by most recent
featuredProjects.sort((a, b) => {
  const dateA = a.data.from.getTime();
  const dateB = b.data.from.getTime();
  return dateB - dateA;
});

// Deduplicate by project name (keep most recent)
const uniqueProjects: typeof featuredProjects = [];
const seenProjects = new Set<string>();
for (const project of featuredProjects) {
  const projectName = project.data.project?.toLowerCase() || "";
  const key = featuredSlugs.find(
    (s) => projectName.includes(s) || project.id.includes(s)
  );
  if (key && !seenProjects.has(key)) {
    seenProjects.add(key);
    uniqueProjects.push(project);
  }
}

// Project URLs (null = coming soon)
const projectUrls: Record<string, string | null> = {
  maklerupdate: "https://maklerupdate.de",
  "easy-invoice": null, // coming soon
  tourvy: "https://tourvy.com",
};
---

<section class="app-grid py-12">
  <div class="app-text-column">
    <h2 class="title mb-6">{t.sections.featuredProjects}</h2>
    <div class="space-y-4">
      {
        uniqueProjects.slice(0, 3).map((project) => {
          const slug = featuredSlugs.find(
            (s) =>
              project.data.project?.toLowerCase().includes(s) ||
              project.id.includes(s)
          );
          const externalUrl = slug ? projectUrls[slug] : undefined;
          const isComingSoon = slug && projectUrls[slug] === null;
          const detailUrl = lang === "de" ? `/projects/${slug}` : `/en/projects/${slug}`;

          return (
            <a href={detailUrl} class="block">
              <div class="p-4 rounded-lg border border-border bg-card card-hover">
                <div class="flex items-center justify-between gap-2 mb-2">
                  <h3 class="font-semibold text-foreground">
                    {project.data.project}
                  </h3>
                  <div class="flex items-center gap-2 shrink-0">
                    {isComingSoon && (
                      <span class="cv-badge text-[10px]">
                        {lang === "de" ? "Bald" : "Soon"}
                      </span>
                    )}
                    {externalUrl && (
                      <span
                        onclick={`event.stopPropagation(); window.open('${externalUrl}', '_blank')`}
                        class="text-muted-foreground hover:text-foreground transition-colors cursor-pointer"
                        aria-label={`Visit ${project.data.project}`}
                      >
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                          />
                        </svg>
                      </span>
                    )}
                    <svg class="w-4 h-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
                {project.data.intro && (
                  <p class="text-sm text-muted-foreground line-clamp-2">
                    {project.data.intro}
                  </p>
                )}
                {project.data.technologies && (
                  <div class="flex flex-wrap gap-1 mt-3">
                    {project.data.technologies.slice(0, 4).map((tech) => (
                      <span class="cv-badge text-[10px]">{tech}</span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
