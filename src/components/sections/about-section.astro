---
// About Section Component - Recruiter-Focused
import type { Locale } from "../../i18n";

interface Props {
  lang?: Locale;
}

const { lang = "de" } = Astro.props;
---

<section class="app-grid">
  <div class="app-text-column">
    <div class="flex flex-col gap-6">
      <!-- Opening Hook -->
      <div class="text-base">
        {lang === "de" ? (
          <p class="leading-relaxed">
            Ich bringe AI-Produkte von der Idee zum Launch. Senior Engineer mit 10+
            Jahren Full-Stack-Entwicklung – spezialisiert auf pragmatische Lösungen,
            schnelle MVPs und KI-Integration. Verfügbar 20-40h/Woche – kurzfristig oder langfristig.
          </p>
        ) : (
          <p class="leading-relaxed">
            I bring AI products from idea to launch. Senior Engineer with 10+
            years of full-stack development – specialized in pragmatic solutions,
            rapid MVPs, and AI integration. Available 20-40h/week – short-term or long-term.
          </p>
        )}
      </div>

      <!-- Core Expertise -->
      <div>
        <h2 class="title mb-4">{lang === "de" ? "Was ich mitbringe" : "What I bring"}</h2>
        {lang === "de" ? (
          <ul class="space-y-3 text-sm">
            <li class="flex gap-3">
              <span>
                <span class="cv-badge">Senior AI Engineer</span> Multi-Agent LLM-Systeme,
                GPT/Gemini-Integration, Vector Search – vom Prototyp bis Production
              </span>
            </li>
            <li class="flex gap-3">
              <span>
                <span class="cv-badge">10+ Jahre Full-Stack</span> TypeScript, React,
                Svelte, Next.js, Node.js, PostgreSQL – schnelle Iteration, nachhaltige
                Architektur
              </span>
            </li>
            <li class="flex gap-3">
              <span>
                <span class="cv-badge">Startup- und Enterprise-erfahren</span>
                Douglas, sipgate, und diverse Scale-ups: Frontnow, Energybox
              </span>
            </li>
            <li class="flex gap-3">
              <span>
                <span class="cv-badge">Technical Leadership</span> Architektur-Entscheidungen,
                Mentoring, Product-Level Thinking – kann hands-on entwickeln oder strategisch
                führen
              </span>
            </li>
          </ul>
        ) : (
          <ul class="space-y-3 text-sm">
            <li class="flex gap-3">
              <span>
                <span class="cv-badge">Senior AI Engineer</span> Multi-agent LLM systems,
                GPT/Gemini integration, vector search – from prototype to production
              </span>
            </li>
            <li class="flex gap-3">
              <span>
                <span class="cv-badge">10+ Years Full-Stack</span> TypeScript, React,
                Svelte, Next.js, Node.js, PostgreSQL – rapid iteration, sustainable
                architecture
              </span>
            </li>
            <li class="flex gap-3">
              <span>
                <span class="cv-badge">Startup & Enterprise Experience</span>
                Douglas, sipgate, and various scale-ups: Frontnow, Energybox
              </span>
            </li>
            <li class="flex gap-3">
              <span>
                <span class="cv-badge">Technical Leadership</span> Architecture decisions,
                mentoring, product-level thinking – can develop hands-on or lead strategically
              </span>
            </li>
          </ul>
        )}
      </div>

      <!-- What I'm Looking For -->
      <div>
        <h2 class="title mb-4">{lang === "de" ? "Was ich suche" : "What I'm looking for"}</h2>
        {lang === "de" ? (
          <div class="space-y-4">
            <ul class="space-y-2 text-sm">
              <li class="flex gap-3">
                <span class="shrink-0">→</span>
                <span>AI/LLM-Produktentwicklung oder Technical Leadership</span>
              </li>
              <li class="flex gap-3">
                <span class="shrink-0">→</span>
                <span>Freelance, 20-40h/Woche, kurzfristig verfügbar</span>
              </li>
              <li class="flex gap-3">
                <span class="shrink-0">→</span>
                <span>Offen für Produkt-Partnerschaften auf Equity-Basis</span>
              </li>
            </ul>
            <p class="text-sm">
              Auch offen für Festanstellung in strategischen Rollen (Product Lead, CTO, Head of Engineering)
            </p>
          </div>
        ) : (
          <div class="space-y-4">
            <ul class="space-y-2 text-sm">
              <li class="flex gap-3">
                <span class="shrink-0">→</span>
                <span>AI/LLM product development or technical leadership</span>
              </li>
              <li class="flex gap-3">
                <span class="shrink-0">→</span>
                <span>Freelance, 20-40h/week, available immediately</span>
              </li>
              <li class="flex gap-3">
                <span class="shrink-0">→</span>
                <span>Open to product partnerships on equity basis</span>
              </li>
            </ul>
            <p class="text-sm">
              Also open to permanent positions in strategic roles (Product Lead, CTO, Head of Engineering)
            </p>
          </div>
        )}
      </div>

      <!-- Availability -->
      <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4 pt-4 border-t">
        <div>
          <dt class="text-xs font-semibold uppercase cv-text-meta mb-1">
            {lang === "de" ? "Verfügbarkeit" : "Availability"}
          </dt>
          <dd>{lang === "de" ? "20-40h/Woche" : "20-40h/week"}</dd>
        </div>
        <div>
          <dt class="text-xs font-semibold uppercase cv-text-meta mb-1">
            {lang === "de" ? "Ab" : "From"}
          </dt>
          <dd>{lang === "de" ? "kurzfristig verfügbar" : "available immediately"}</dd>
        </div>
      </dl>
    </div>
  </div>
</section>
