---
import type { Locale } from "../../i18n";
import { getTranslations, getLocalizedPath } from "../../i18n";

interface Props {
  lang?: Locale;
}

const { lang = "de" } = Astro.props;
const t = getTranslations(lang);
---

<section class="app-grid">
  <div class="app-text-column">
    <div class="flex flex-col gap-6">
      <!-- Opening Hook -->
      <div>
        <p class="text-lg font-semibold mb-2">
          {t.about.tagline}
        </p>
        <p class="text-base leading-relaxed">
          {t.about.description}
        </p>
      </div>

      <!-- Core Expertise -->
      <div>
        <h2 class="title text-left mb-4">{t.about.whatIBring}</h2>
        {
          lang === "de" ? (
            <ul class="space-y-3 text-sm">
              <li class="flex gap-3">
                <span>
                  <span class="cv-badge">10+ Jahre Full-Stack</span> TypeScript,
                  React, Svelte, Next.js, Node.js, PostgreSQL – schnelle
                  Iteration, nachhaltige Architektur
                </span>
              </li>
              <li class="flex gap-3">
                <span>
                  <span class="cv-badge">Architektur & System-Design</span> Vom
                  Prototyp bis Production – skalierbare APIs, saubere
                  Datenmodelle, wartbarer Code
                </span>
              </li>
              <li class="flex gap-3">
                <span>
                  <span class="cv-badge">Startup- und Enterprise-erfahren</span>
                  Douglas, sipgate, und diverse Scale-ups: Frontnow, Energybox
                </span>
              </li>
              <li class="flex gap-3">
                <span>
                  <span class="cv-badge">Technical Leadership</span>{" "}
                  Architektur-Entscheidungen, Mentoring, Product-Level Thinking
                  – kann hands-on entwickeln oder strategisch führen
                </span>
              </li>
            </ul>
          ) : (
            <ul class="space-y-3 text-sm">
              <li class="flex gap-3">
                <span>
                  <span class="cv-badge">10+ Years Full-Stack</span> TypeScript,
                  React, Svelte, Next.js, Node.js, PostgreSQL – rapid iteration,
                  sustainable architecture
                </span>
              </li>
              <li class="flex gap-3">
                <span>
                  <span class="cv-badge">Architecture & System Design</span>{" "}
                  From prototype to production – scalable APIs, clean data
                  models, maintainable code
                </span>
              </li>
              <li class="flex gap-3">
                <span>
                  <span class="cv-badge">Startup & Enterprise Experience</span>
                  Douglas, sipgate, and various scale-ups: Frontnow, Energybox
                </span>
              </li>
              <li class="flex gap-3">
                <span>
                  <span class="cv-badge">Technical Leadership</span>{" "}
                  Architecture decisions, mentoring, product-level thinking –
                  can develop hands-on or lead strategically
                </span>
              </li>
            </ul>
          )
        }
      </div>

      <!-- Availability -->
      <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4 pt-4 border-t">
        <div>
          <dt class="text-xs font-semibold uppercase cv-text-meta mb-1">
            {t.about.availability}
          </dt>
          <dd>{t.about.availabilityHours}</dd>
        </div>
        <div>
          <dt class="text-xs font-semibold uppercase cv-text-meta mb-1">
            {lang === "de" ? "Ab" : "From"}
          </dt>
          <dd>{t.about.availabilityStatus}</dd>
        </div>
      </dl>

      <!-- Ghost Button to CV -->
      <div class="pt-2">
        <a
          href={getLocalizedPath("cv", lang)}
          class="inline-flex items-center gap-1 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors"
        >
          {t.about.viewFullCv}
          <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </div>
</section>
