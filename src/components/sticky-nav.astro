---
// Sticky Navigation Component
---

<nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Name -->
      <a href="/" class="text-lg font-medium hover:opacity-70 transition-opacity">
        Arne Wiese
      </a>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#about" class="text-sm hover:text-gray-600 transition-colors">
          Über mich
        </a>
        <a href="#services" class="text-sm hover:text-gray-600 transition-colors">
          Services
        </a>
        <a href="#technologies" class="text-sm hover:text-gray-600 transition-colors">
          Technologien
        </a>
        <a href="#projects" class="text-sm hover:text-gray-600 transition-colors">
          Projekte
        </a>

        <!-- CTA Button -->
        <a
          href="mailto:arne@wiese.me?subject=Projektanfrage"
          class="button-cta-sm"
        >
          Projekt anfragen
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden inline-flex items-center justify-center p-2 rounded-md hover:bg-gray-100 transition-colors"
        aria-label="Hauptmenü öffnen"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="#about" class="block px-3 py-2 rounded-md text-base hover:bg-gray-100 transition-colors">
        Über mich
      </a>
      <a href="#services" class="block px-3 py-2 rounded-md text-base hover:bg-gray-100 transition-colors">
        Services
      </a>
      <a href="#technologies" class="block px-3 py-2 rounded-md text-base hover:bg-gray-100 transition-colors">
        Technologien
      </a>
      <a href="#projects" class="block px-3 py-2 rounded-md text-base hover:bg-gray-100 transition-colors">
        Projekte
      </a>
      <a
        href="mailto:arne@wiese.me?subject=Projektanfrage"
        class="block px-3 py-2 rounded-md text-base font-medium bg-gray-900 text-white hover:bg-gray-800 transition-colors text-center"
      >
        Projekt anfragen
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href') || '');
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
        // Close mobile menu after click
        menu?.classList.add('hidden');
      }
    });
  });
</script>
