---
// Technologies Section
const technologies = {
  "Frontend": [
    "TypeScript", "JavaScript (ES6+)", "React", "Next.js", "Svelte", "SvelteKit",
    "Vue.js", "Preact", "Redux", "HTML5", "CSS3", "Sass", "Tailwind CSS",
    "CSS-in-JS", "Responsive Design", "Framer Motion"
  ],
  "Backend": [
    "Node.js", "Python", "Django", "REST APIs", "GraphQL", "Serverless Functions"
  ],
  "AI & Machine Learning": [
    "OpenAI GPT-4", "Google Gemini", "Anthropic Claude", "Prompt Engineering",
    "Multi-Agent Workflows", "Vektorsuche", "RAG", "LangChain"
  ],
  "Datenbanken": [
    "PostgreSQL", "MySQL", "MongoDB", "Firebase", "Supabase", "Cloud Firestore"
  ],
  "Testing": [
    "Jest", "React Testing Library", "Cypress", "Playwright", "TDD",
    "Unit Testing", "E2E Testing", "Integration Testing"
  ],
  "Tools & DevOps": [
    "Git", "GitHub", "Docker", "CI/CD", "GitHub Actions", "Vercel", "Netlify",
    "Webpack", "Vite", "npm/pnpm/yarn", "Figma", "Sentry"
  ],
  "E-Commerce": [
    "Produktdatenverwaltung", "PIM-Systeme", "Payment-Integration",
    "Shopping-Cart", "A/B-Testing", "SEO", "Analytics"
  ],
  "Methodiken": [
    "Agile", "Scrum", "Kanban", "Code Reviews", "Pair Programming",
    "Remote Work", "Technical Documentation"
  ]
};
---

<section id="technologies" class="app-grid py-16 scroll-mt-16">
  <div class="app-wide-column">
    <!-- Section Title -->
    <h2 class="cv-h2 mb-6">
      Technologien & Skills
    </h2>

    <!-- Technologies Grid -->
    <div class="space-y-12">
      {Object.entries(technologies).map(([category, techs]) => (
        <div>
          <h3 class="cv-h2 mb-4">
            {category}
          </h3>
          <div class="flex flex-wrap gap-2">
            {techs.map((tech) => (
              <span class="inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium bg-gray-100 text-gray-900 hover:bg-gray-200 transition-colors">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Additional Info -->
    <div class="mt-16 grid md:grid-cols-3 gap-8 text-center">
      <div class="space-y-2">
        <div class="text-4xl font-bold">10+</div>
        <div class="text-gray-600">Jahre Erfahrung</div>
      </div>
      <div class="space-y-2">
        <div class="text-4xl font-bold">4</div>
        <div class="text-gray-600">Branchen</div>
        <div class="text-sm text-gray-500">E-Commerce · Telco · IoT · Energy</div>
      </div>
      <div class="space-y-2">
        <div class="text-4xl font-bold">100%</div>
        <div class="text-gray-600">Remote</div>
      </div>
    </div>

    <!-- Languages -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center gap-4 text-sm text-gray-600">
        <span class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7 2a1 1 0 011 1v1h3a1 1 0 110 2H9.578a18.87 18.87 0 01-1.724 4.78c.29.354.596.696.914 1.026a1 1 0 11-1.44 1.389c-.188-.196-.373-.396-.554-.6a19.098 19.098 0 01-3.107 3.567 1 1 0 01-1.334-1.49 17.087 17.087 0 003.13-3.733 18.992 18.992 0 01-1.487-2.494 1 1 0 111.79-.89c.234.47.489.928.764 1.372.417-.934.752-1.913.997-2.927H3a1 1 0 110-2h3V3a1 1 0 011-1zm6 6a1 1 0 01.894.553l2.991 5.982a.869.869 0 01.02.037l.99 1.98a1 1 0 11-1.79.895L15.383 16h-4.764l-.724 1.447a1 1 0 11-1.788-.894l.99-1.98.019-.038 2.99-5.982A1 1 0 0113 8zm-1.382 6h2.764L13 11.236 11.618 14z" clip-rule="evenodd" />
          </svg>
          Deutsch (Muttersprache)
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7 2a1 1 0 011 1v1h3a1 1 0 110 2H9.578a18.87 18.87 0 01-1.724 4.78c.29.354.596.696.914 1.026a1 1 0 11-1.44 1.389c-.188-.196-.373-.396-.554-.6a19.098 19.098 0 01-3.107 3.567 1 1 0 01-1.334-1.49 17.087 17.087 0 003.13-3.733 18.992 18.992 0 01-1.487-2.494 1 1 0 111.79-.89c.234.47.489.928.764 1.372.417-.934.752-1.913.997-2.927H3a1 1 0 110-2h3V3a1 1 0 011-1zm6 6a1 1 0 01.894.553l2.991 5.982a.869.869 0 01.02.037l.99 1.98a1 1 0 11-1.79.895L15.383 16h-4.764l-.724 1.447a1 1 0 11-1.788-.894l.99-1.98.019-.038 2.99-5.982A1 1 0 0113 8zm-1.382 6h2.764L13 11.236 11.618 14z" clip-rule="evenodd" />
          </svg>
          Englisch (fließend)
        </span>
      </div>
    </div>
  </div>
</section>
