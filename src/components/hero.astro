---
import { Image } from "astro:assets";
---

<section class="app-grid py-24 md:py-32">
  <div class="text-center space-y-8">
    <!-- Profile Image -->
    <div class="flex justify-center">
      <div class="relative">
        <Image
          src="/assets/arne-neu-quadratisch.jpeg"
          alt="Arne Wiese"
          widths={[384, 576]}
          aspectRatio="1:1"
          class="rounded-2xl w-32 h-32 md:w-40 md:h-40"
          width={160}
          height={160}
        />
      </div>
    </div>

    <!-- Name & Title -->
    <div class="space-y-4">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight">
        Arne Wiese
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto">
        Senior Full-Stack Engineer · AI/LLM-Integration · TypeScript, React,
        Svelte
      </p>
    </div>

    <!-- Elevator Pitch -->
    <div class="max-w-2xl mx-auto">
      <p class="text-lg md:text-xl leading-relaxed">
        Entwickle MVPs mit Weitblick: schnell zum Launch, gebaut für
        langfristiges Wachstum. 10+ Jahre Full-Stack-Erfahrung in E-Commerce,
        Telco, IoT.
      </p>
    </div>

    <!-- Tech Keywords -->
    <div class="flex flex-wrap justify-center gap-2 text-sm">
      <span class="badge">TypeScript</span>
      <span class="badge">React</span>
      <span class="badge">Svelte</span>
      <span class="badge">Node.js</span>
      <span class="badge">OpenAI</span>
      <span class="badge">PostgreSQL</span>
      <span class="badge">AI Agents</span>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
      <a href="mailto:arne@wiese.me?subject=Projektanfrage" class="button-cta">
        Projekt besprechen
      </a>
      <a href="/cv" class="button-secondary"> Lebenslauf ansehen </a>
    </div>
  </div>
</section>
